
<!DOCTYPE html>
<html>
<head>
  <title>Trainr</title>
	<%= stylesheet_link_tag    'application', media: 'all'%>
  <%= javascript_include_tag 'application'  %>
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <%= csrf_meta_tags %>
</head>
<body>
<div class="top-bar container">

	
	<% if current_user %>
		<div class= "btn-group">
		<%= link_to "Log Out!", destroy_user_session_path, method: "DELETE", class: "btn btn-lrg"%>
		<%= link_to "Home", user_path(current_user), {class: "btn"} %>
		</div>
	<% else %>
		<div class= "btn-group">
			<%= link_to "Log In!", new_user_session_path %>
		</div>
	<% end %>

	
</div>




<div class="container">
	<%= yield %>
</div>
</body>
</html>
