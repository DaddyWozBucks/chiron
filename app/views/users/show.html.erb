<div class="background-container container-fluid">
	

	<div>

  <!-- Nav tabs -->
  <ul class="nav nav-tabs" role="tablist">
    <li role="presentation" class="active"><a href="#home" aria-controls="home" role="tab" data-toggle="tab">Profile Info</a></li>
    <li role="presentation"><a href="#profile" aria-controls="profile" role="tab" data-toggle="tab">Charts</a></li>
    <li role="presentation"><a href="#messages" aria-controls="messages" role="tab" data-toggle="tab">Messages</a></li>
    <li role="presentation"><a href="#settings" aria-controls="settings" role="tab" data-toggle="tab">Settings</a></li>
  </ul>

  <!-- Tab panes -->
  <div class="tab-content">
    <div role="tabpanel" class="tab-pane active" id="home">
    			Name: <%= current_user.name %>
				<br/>
				Handle: <%= current_user.handle%>
				<br/>
				Location: <%= current_user.location%>
				<div class="workouts-month ">
			<% @workouts.each do |x| %>
				<div class="workouts-month__item"><%= x.title %> <span class="pull-right"><%= time_ago_in_words(x.updated_at) %></span></div>
			<% end %>
		</div>

    </div>
    <div role="tabpanel" class="tab-pane" id="profile">
    		<%= pie_chart current_user.workouts.group(:title).count %>
    		
    </div>
    <div role="tabpanel" class="tab-pane" id="messages">
    <%= line_chart current_user.workouts.group_by_week(:updated_at).count %>
    </div>
    <div role="tabpanel" class="tab-pane" id="settings">...</div>
  </div>

</div>

