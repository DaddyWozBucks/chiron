<div class="container template-new">
  <h1>Create your own exercise!</h1>

    <p>We know gym rats will use anything to exercise so feel free to add your own exercise!</p>
      <%= form_for @template  :url => users_path, :html => { :multipart => true } do |f| %>
      <div>
          <%= f.file_field :template_shot %>
      </div>

      <div class="col-md-4">
        <div class="field ">
          <%= f.label :name %><br />
          <%= f.text_field :name, autofocus: true %>
        </div>
        <div class="field">
          <%= f.label :musclecat %><br />
          <%= f.text_field :musclecat, autofocus: true %>
        </div>
      </div>

      <div class="field input-area col-md-6">
        <%= f.label :instructions %><br />
        <%= f.text_area :instructions, autofocus: true, :class => "instr-input" %>
      </div>
    <div clas="btn btn-success">
    <%= select_tag(:weight, options_for_select([["Cardio", false], ["Lifting", true]]))%>
    </div>

    <div class="field">
      <%= f.submit %>
    </div>
    <% end %>

</div>